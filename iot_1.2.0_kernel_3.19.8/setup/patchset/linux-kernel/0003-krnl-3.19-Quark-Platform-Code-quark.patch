+	ret = gpio_to_irq(POWER_PATH_GPIO);
+	power_path_irq = ret;
+	gpio_free(POWER_PATH_GPIO);
+	gpio_wake_done = 1;
+gpio:
+	if (gpio_done)
+		goto spi;
+	ret = gpio_request_array(reserved_gpios, ARRAY_SIZE(reserved_gpios));
+	if (ret)
+		goto end;
+	gpio_done = 1;
