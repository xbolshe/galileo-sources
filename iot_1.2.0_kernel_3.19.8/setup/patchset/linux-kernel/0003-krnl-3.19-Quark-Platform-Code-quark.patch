+#define INTEL_QRK_SB_REG_MASK	(0xFF00)
+#define INTEL_QRK_SB_REXT_MASK	(0xFFFFFF00)
+
+#define INTEL_QRK_SB_MCR_SHIFT	(24)
+#define INTEL_QRK_SB_PORT_SHIFT	(16)
+#define INTEL_QRK_SB_REG_SHIFT	(8)
