+	if (ret) {
+		goto out;
+	}
+	pci_write_config_dword(sb_dev.pdev, INTEL_QRK_SB_CMD_ADDR, msg);
+
+out:
+	if (lock)
+		spin_unlock(&sb_dev.slock);
+
+	if (ret) {
+		pr_err("%s: MCR=0x%x, MCRX=0x%x, MDR=0x%x failed (%d)\n",
