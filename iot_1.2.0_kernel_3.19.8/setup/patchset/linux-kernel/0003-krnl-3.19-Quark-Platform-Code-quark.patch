+static const struct file_operations j1708_fops = {
+	.owner = THIS_MODULE,
+	.open = j1708_open,
+	.release = j1708_release,
+	.read = j1708_read_one_message,
+	.write = NULL,
+	.unlocked_ioctl = j1708_ioctl
+};
