+static int intel_qrk_esram_probe(struct platform_device * pdev)
+{
+	int ret = 0;
+	u32 block = 0, ctrl = 0, i = 0, pgstat = 0;
+
+	/* ECC buffer must be page aligned */
+	ecc_buf = (void *)__get_free_page(GFP_KERNEL);
+	if (NULL == ecc_buf) {
+		return -ENOMEM;
+	}
